<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/dark_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseDetailsActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/custom_progress_bar"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/activityContainer"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Exercise Name"
            android:id="@+id/textViewExerciseName"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:gravity="center"
            android:layout_height="40dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="Exercise Region:"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/under_line_border"
                        android:textStyle="italic|bold"
                        android:layout_height="wrap_content">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="Region"
                        android:id="@+id/textViewExerciseRegion"
                        android:textStyle="italic"
                        android:layout_height="wrap_content">


                    </TextView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Exercise Detail:"
                    android:background="@drawable/under_line_border"
                    android:textStyle="italic|bold"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/textViewExerciseDetail"
                    android:text="Dtaifldsfadşflkaslşfkşalfd"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">


                </TextView>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>