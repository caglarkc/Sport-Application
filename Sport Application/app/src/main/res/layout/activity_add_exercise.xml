<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/dark_background_color"
    android:layout_height="match_parent"
    tools:context=".AddExerciseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="650dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="Add Exercise Page"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="220dp"
                android:id="@+id/editTextExerciseName"
                android:hint="Exercise Name..."
                android:textColorHint="@color/hint_color"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:background="@drawable/border"
                android:layout_height="50dp" />

            <Spinner
                android:id="@+id/spinnerRegion"
                android:layout_width="110dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/border"
                android:entries="@array/body_regions" />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/editTextDetail"
            android:hint="Detail..."
            android:gravity="start"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_height="200dp"/>


        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonAddExercise"
            android:layout_width="wrap_content"
            app:backgroundTint="@null"
            android:layout_marginTop="20dp"
            android:text="Add Exercise"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic|bold"
            android:padding="5dp"
            android:background="@drawable/border"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>